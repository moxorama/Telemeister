# Telegram API credentials
# Get these from https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here
BOT_TOKEN=your_bot_token_here

# Optional: Session string for persistent login
# Generated automatically on first run
SESSION_STRING=

# Bot mode: 'polling' or 'webhook'
BOT_MODE=polling

# Webhook configuration (only needed when BOT_MODE=webhook)
WEBHOOK_URL=https://your-domain.com/webhook
PORT=3000

# Database Configuration
# For SQLite (development):
DATABASE_URL="file:./dev.db"

# For MySQL (production), uncomment and configure:
# DATABASE_URL="mysql://root:password@localhost:3306/telemeister"
